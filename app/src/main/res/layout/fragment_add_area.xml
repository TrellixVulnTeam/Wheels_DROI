<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardBackgroundColor="#A6C8E6C9"
    app:cardCornerRadius="35dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/addAreaDialoge"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="#f0f4f7"
        tools:context="layout.AddArea">

        <!-- TODO: Update blank fragment layout -->

        <AutoCompleteTextView
            android:id="@+id/etCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:completionHint="city"
            android:hint="City"
            android:popupBackground="#99C8E6C9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.952"
            app:layout_constraintLeft_toRightOf="@+id/spCityLocation"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.504" />

        <Spinner
            android:id="@+id/spCityLocation"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:entries="@array/city"
            android:popupBackground="#A6C8E6C9"
            app:layout_constraintBottom_toBottomOf="@+id/etCity"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/etCity"
            app:layout_constraintTop_toTopOf="@+id/etCity"
            app:layout_constraintVertical_bias="0.0" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>